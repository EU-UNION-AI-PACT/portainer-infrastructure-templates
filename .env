# Portainer Infrastructure Templates - Environment Configuration
# Copy this file to .env and customize your passwords

# =============================================================================
# SECURITY STACK CONFIGURATION
# =============================================================================

# Wazuh SIEM Platform
WAZUH_PASSWORD=SecureWazuhPassword123!

# Vaultwarden (Bitwarden-compatible password manager)
VAULTWARDEN_ADMIN_TOKEN=your-super-secure-admin-token-here

# HashiCorp Vault
VAULT_TOKEN=hvs.your-vault-root-token-here

# Authelia Authentication
AUTHELIA_JWT_SECRET=your-jwt-secret-here
AUTHELIA_SESSION_SECRET=your-session-secret-here

# =============================================================================
# MONITORING STACK CONFIGURATION
# =============================================================================

# Grafana Dashboard
GRAFANA_PASSWORD=admin123
GRAFANA_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_RETENTION=200h

# Elasticsearch Configuration
ELASTIC_PASSWORD=elastic123

# =============================================================================
# VPN STACK CONFIGURATION
# =============================================================================

# WireGuard VPN
WIREGUARD_SERVER_URL=vpn.yourdomain.com
WIREGUARD_PEERS=10
WIREGUARD_INTERNAL_SUBNET=10.13.13.0

# Tailscale Mesh Network
TAILSCALE_AUTHKEY=tskey-your-auth-key-here

# ZeroTier Network
ZEROTIER_NETWORK_ID=your-network-id-here

# Nginx Proxy Manager
NPM_DB_PASSWORD=npm-secure-password
NPM_DB_ROOT_PASSWORD=npm-root-password

# OpenVPN Access Server
OPENVPN_ADMIN_PASSWORD=openvpn-admin-password

# =============================================================================
# DEVELOPMENT STACK CONFIGURATION
# =============================================================================

# Code Server (VS Code in Browser)
CODE_SERVER_PASSWORD=code-server-password
CODE_SERVER_SUDO_PASSWORD=sudo-password

# Gitea Git Service
GITEA_DB_PASSWORD=gitea-db-password
GITEA_ADMIN_USER=gitea-admin
GITEA_ADMIN_PASSWORD=gitea-admin-password

# GitLab CE
GITLAB_ROOT_PASSWORD=gitlab-root-password
GITLAB_HTTP_PORT=8080
GITLAB_SSH_PORT=2222
GITLAB_REGISTRY_PORT=5050

# Jenkins CI/CD
JENKINS_ADMIN_PASSWORD=jenkins-admin-password

# SonarQube Code Quality
SONAR_DB_PASSWORD=sonar-db-password
SONAR_ADMIN_PASSWORD=sonar-admin-password

# Docker Registry
REGISTRY_USERNAME=registry-user
REGISTRY_PASSWORD=registry-password

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Timezone
TZ=Europe/Berlin

# User/Group IDs (for Linux compatibility)
PUID=1000
PGID=1000

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Domain for SSL certificates
DOMAIN=localhost
DOMAIN_EMAIL=admin@localhost

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# DATABASE PASSWORDS
# =============================================================================

# PostgreSQL (used by multiple services)
POSTGRES_PASSWORD=postgres-secure-password

# MySQL/MariaDB (used by multiple services)
MYSQL_ROOT_PASSWORD=mysql-root-password
MYSQL_PASSWORD=mysql-user-password

# Redis (caching and sessions)
REDIS_PASSWORD=redis-secure-password

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup encryption key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# S3 Compatible backup storage
BACKUP_S3_ENDPOINT=https://s3.amazonaws.com
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# FREE SECURITY ALTERNATIVES CONFIGURATION
# =============================================================================

# Vaultwarden (Keeper Alternative)
VAULTWARDEN_ADMIN_TOKEN=your-super-secure-vaultwarden-admin-token
SIGNUPS_ALLOWED=true
DOMAIN=https://localhost

# Keycloak (Auth0 Alternative)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=secure-keycloak-admin-password
KEYCLOAK_DB_PASSWORD=secure-keycloak-db-password

# Authentik (Authy/Auth0 Alternative)
AUTHENTIK_SECRET_KEY=your-authentik-secret-key-must-be-50-characters-long
AUTHENTIK_DB_PASSWORD=secure-authentik-db-password

# Authelia (FrontEgg Alternative)
AUTHELIA_JWT_SECRET=your-authelia-jwt-secret-key
AUTHELIA_SESSION_SECRET=your-authelia-session-secret
AUTHELIA_STORAGE_ENCRYPTION_KEY=your-authelia-encryption-key

# FusionAuth (Okta Alternative)
FUSIONAUTH_DB_PASSWORD=secure-fusionauth-db-password
FUSIONAUTH_APP_MEMORY=512M

# Passbolt (Team Password Manager)
PASSBOLT_BASE_URL=https://passbolt.local
PASSBOLT_DB_PASSWORD=secure-passbolt-db-password

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Log levels
LOG_LEVEL=INFO

# Performance tuning
MAX_MEMORY=2g
MAX_CPU_CORES=2

# Network subnets
SECURITY_SUBNET=172.20.0.0/16
MONITORING_SUBNET=172.21.0.0/16
VPN_SUBNET=172.22.0.0/16
DEV_SUBNET=172.23.0.0/16