{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml": "yaml", 
    "docker-compose*.yml": "yaml",
    "docker-compose*.yaml": "yaml",
    "portainer-template.json": "json",
    "*.template.json": "json"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.autoIndent": "advanced"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "yaml.schemas": {
    "https://json.schemastore.org/docker-compose.json": [
      "docker-compose*.yml",
      "docker-compose*.yaml",
      "stacks/*.yml",
      "stacks/*.yaml"
    ],
    "https://raw.githubusercontent.com/portainer/portainer/develop/app/portainer/services/api/templates.json": [
      "**/portainer-template.json",
      "**/*portainer*.json"
    ]
  },
  "json.schemas": [
    {
      "fileMatch": [
        "**/portainer-template.json",
        "**/*template*.json"
      ],
      "url": "https://raw.githubusercontent.com/portainer/portainer/develop/app/portainer/services/api/templates.json"
    }
  ],
  "docker.defaultRegistryPath": "docker.io",
  "docker.commands.build": "${containerCommand} build --pull --rm -f \"${dockerfile}\" -t ${tag} \"${context}\"",
  "docker.commands.run": "${containerCommand} run --rm -d ${exposedPorts} ${tag}",
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
  ],
  "errorLens.excludeBySource": [],
  "prettier.configPath": "./.prettierrc",
  "prettier.ignorePath": "./.prettierignore",
  "workbench.colorTheme": "Default Dark+",
  "terminal.integrated.defaultProfile.linux": "bash",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.git": false,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/venv": true
  },
  "emmet.includeLanguages": {
    "dockercompose": "yaml",
    "docker-compose": "yaml"
  }
}